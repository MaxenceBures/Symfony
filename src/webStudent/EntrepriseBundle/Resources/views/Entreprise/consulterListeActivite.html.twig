{% extends "::layout.html.twig" %}

{% block body %}
	<h1>Activite</h1>
	<table >
		<thead>
			<tr>
				<th width="200">Id</th>
				<th width="200">Libelle</th>
				<th width="200">Code</th>
				<th width="200"></th>

			</tr>
		</thead>
		{% for activite in listeActivite %}
