{# src/webStudent/EtudiantBundle/Resources/views/Etudiant/ajouterStage.html.twig #}
{% extends "::layout.html.twig" %}
	
{% block body %}



	<h2>Ajouter un Stage</h2>
	
	</br>

	<form  method="post" {{ form_enctype(form) }}>
	<!-- {{ form_errors(form) }} -->
		<table >
			<tr>
				<th width="300">Intitule</th>
				{{ form_errors(form.intitule) }}
				<td width="600">{{ form_widget(form.intitule, {'attr': {'placeholder': 'intitule'} }) }} </td>
			</tr>
			<tr>
				<th>Date Debut</th>
				{{ form_errors(form.dateDebut) }}
				<td>{{ form_widget(form.dateDebut) }}</td>
			</tr>
			<tr>
				<th>Date Fin</th>
				{{ form_errors(form.dateFin) }}
				<td>{{ form_widget(form.dateFin) }}</td>
			</tr>
			<tr>
				<th>Activite</th>
				{{ form_errors(form.activite) }}
				<td>{{ form_widget(form.activite, {'attr': {'placeholder': 'activite'} }) }}</td>
			</tr>
			<tr>
				<th>Entreprise</th>
				{{ form_errors(form.entreprise) }}
				<td>{{ form_widget(form.entreprise) }}</td>
			</tr>
			<tr>
				<th>Etudiant</th>
				{{ form_errors(form.etudiant) }}
				<td>{{ form_widget(form.etudiant) }}</td>
			</tr>
			
			<tr>
		<td align="center"><button type="reset">Effacer</button>
		<td align="center"><button type="submit">Valider</button>
	</tr>
		</table>
		{{ form_rest(form) }}			 
	</form>




{% endblock %}